<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.filemanagerapp.controller.LoginController"
      spacing="10" style="-fx-padding: 20;" alignment="CENTER">

    <!-- Título -->
    <Label text="Iniciar Sesión" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <!-- Campo de usuario -->
    <TextField fx:id="usernameField" promptText="Usuario"/>

    <!-- Campo de contraseña -->
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>

    <!-- Botón de inicio de sesión -->
    <Button text="Iniciar Sesión" onAction="#handleLogin" style="-fx-background-color: #0078d7; -fx-text-fill: white;"/>

    <!-- Etiqueta de estado -->
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;"/>
</VBox>