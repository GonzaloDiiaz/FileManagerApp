<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.filemanagerapp.controller.MainController">

    <!-- Sección superior (barra de herramientas) -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Abrir" onAction="#openFile"/>
            <Button text="Guardar" onAction="#saveFile"/>
            <TextField fx:id="searchField" promptText="Buscar archivo..."/>
            <Button fx:id="btnBuscarArchivo" text="Buscar Archivo" onAction="#buscarArchivo"/>
        </HBox>
    </top>

    <!-- Sección central (lista de archivos) -->
    <center>
        <ListView fx:id="fileListView"/>
    </center>

    <!-- Sección inferior (etiqueta de estado) -->
    <bottom>
        <Label fx:id="lblArchivoSeleccionado" text="Ningún archivo seleccionado" style="-fx-padding: 10;"/>
    </bottom>

</BorderPane>