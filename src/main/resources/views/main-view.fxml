    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Abrir" onAction="#openFile"/>
            <Button text="Guardar" onAction="#saveFile"/>
            <TextField fx:id="searchField" promptText="Buscar archivo..."/>
